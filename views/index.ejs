
<% if (message) { %>
    <script>
      alert("<%= message %>");
    </script>
  <% } %>
  <div class="author">
    <h1 class="author__heading">Hi, I am Bruno</h1>
    <p class="author__body">Web developer Full Stack PHP and JS</p>
</div>

<img src="/img/li.jpg" alt="person looking out through window" class="hero-image" width="10%">

<section class="articles">
    <h2 class="aricles heading">Lastest Posts</h2>
    <ul class="article-ul">
       
        <% data.forEach(post => { %>
        
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date">
                    <%= post.createdAt.toDateString() %>
                </span>
            </a>
        </li>
        <% }) %>

    </ul>
    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
      <% } %>

</section>